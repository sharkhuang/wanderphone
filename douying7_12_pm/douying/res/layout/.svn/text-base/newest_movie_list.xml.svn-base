<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<EditText android:id="@+id/search_edit" android:hint="电影"
			android:layout_height="wrap_content" android:layout_width="240sp"
			android:singleLine="true"
			android:layout_marginTop="3px" />
		<Button android:id="@+id/search_button" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="搜索"
			android:layout_marginLeft="20px"
			/>
	</LinearLayout>
<ListView  
	android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:dividerHeight="1px"
		/>
<TextView
	android:id="@+id/textview"
	android:layout_width = "wrap_content"
	android:layout_height="wrap_content"
/>
</LinearLayout>
